<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnAtomicSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:onClick="atomicSymbolBtnClick"
        android:text="Find"
        app:layout_constraintBottom_toTopOf="@+id/btnElementName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.268"
        app:layout_constraintStart_toEndOf="@+id/edtTxtAtmoicSymbol"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.938" />

    <Button
        android:id="@+id/btnElementName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="elementNameBtnClick"
        android:text="Find"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnAtomicSymbol"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnAtomicSymbol"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.431" />

    <EditText
        android:id="@+id/edtTxtAtmoicSymbol"
        android:layout_width="225dp"
        android:layout_height="59dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:hint="Atomic Symbol"
        android:inputType="textPersonName"
        android:textColorHint="#757575"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.299" />

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="137dp"
        android:layout_height="38dp"
        android:layout_marginTop="60dp"
        android:text="Element: "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtTxtElementName"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/edtTxtElementName"
        android:layout_width="219dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Element Name"
        android:inputType="textPersonName"
        android:textColorHint="#757575"
        app:layout_constraintEnd_toEndOf="@+id/edtTxtAtmoicSymbol"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtTxtAtmoicSymbol"
        app:layout_constraintTop_toBottomOf="@+id/edtTxtAtmoicSymbol" />

</androidx.constraintlayout.widget.ConstraintLayout>